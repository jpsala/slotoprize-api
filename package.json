{
  "name": "api.typescript",
  "version": "1.0.0",
  "main": "index.js",
  "author": "JP <jpsala@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon.debug.json",
    "build": "rimraf ./build && tsc",
    "start": "node build/index.js",
    "lint": "eslint . --ext .ts",
    "pm2-debug": "pm2 start -n api npm -- run start:debug",
    "pm2-dev": "pm2 start -n api npm -- run start:dev",
    "pm2-prod": "pm2 delete api ;npm run build && cross-env NODE_ENV=production pm2 start -n api npm -- run start",
    "pm2-restart": "pm2 delete api ; npm run pm2-prod",
    "pm2-kill": "pm2 kill",
    "pm2-log": "pm2 logs apis"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/http-errors": "^1.6.3",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mysql2": "github:types/mysql2",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.3.1",
    "eslint-plugin-shopify": "^35.1.0",
    "ts-node": "^8.10.2",
    "typescript": "^4.0.0-beta"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "camelcase-keys": "^6.2.2",
    "cors": "^2.8.5",
    "date-fns": "^2.14.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "http-errors": "^1.7.3",
    "http-status-codes": "^1.4.0",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.2",
    "mysql2": "^2.1.0",
    "node-cron": "^2.0.3",
    "node-schedule": "^1.3.2"
  }
}
